{
    "Lua.diagnostics.disable": [
        "lowercase-global",
        "undefined-global",
        "undefined-field"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.meta":true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/*.meta": true
    },
    "lua_analyzer.codeLinting.enable": false,

    "files.associations": {
        ".txt": "lua"
    },
    "luaide.apiType": "xlua",
}